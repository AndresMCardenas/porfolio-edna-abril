---
import Section from "../Section.astro";

import {education} from "@cv";
---

<Section title="Formacion">
  <ul>
    {education.map(({title, institution, studyType,url,endDate,startDate}) => {
      const startYear = new Date(startDate).getFullYear();
      const endYear = endDate != null ? new Date(endDate).getFullYear(): 'Acutalmente';
      const years = `${startYear} - ${endYear}`
      return (
      <li>
        <article>
          <header>
          <div>
            <h3>{title}</h3>
            <h4>{institution}</h4>          
          </div>  
            <time>{years}</time>
          </header>
          
          <footer>
            <p>{studyType}</p>
            <p>{`href${url}`}</p>  
          </footer>

        </article>
      </li>
      )

    })}
  </ul>

</Section>

<style>
  ul{
    display: flex;
    gap: 1rem;
    flex-direction: column;
  }

  article h3{
    font-weight: 500;
    color: #111;

  }

  article h4{
    font-weight: 400;    
  }

  header{
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 4px ;

  }

  time{
    font-size: 0.85rem;
    color: #555;
  }

</style>